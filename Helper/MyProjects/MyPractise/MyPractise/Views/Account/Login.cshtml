@using MyPractise.Exstentions

<div class="row">
    <div class="col-xs-5">
        <p>
            Welcome to Paraben’s customer account management system. Here is where manage your Paraben account information. You can easily update your contact
            information including phone number, fax number, primary address information,
            and even secondary address information. This new system consolidates all
            your Paraben passwords into one account.
        </p>
        <p>
            Now, your shopping cart,
            registration site and support site passwords will all be the same and can be changed from within this account.
        </p>
    </div>
    <div class="col-xs-6 col-xs-offset-1">
        <h2>Login</h2>
        <hr />
        <div class="row">
            <div class="col-xs-7 col-xs-offset-1">

                <form class=" form-horizontal" role="form">
                    <div class="form-group">
                        <label for="inputEmail" class="col-sm-3 control-label">Email</label>
                        <div class="col-sm-8">
                            <input type="email" class="form-control" id="inputEmail" placeholder="Email">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword" class="col-sm-3 control-label">Password</label>
                        <div class="col-sm-8">
                            <input type="password" class="form-control" id="inputPassword" placeholder="Password">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-6">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox"> Remember me
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-10">
                            @RazorHelpers.Button(Html, text: "Sign in")
                            @RazorHelpers.Button(Html, text: "Reset password")
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section scripts{
    @Scripts.Render("~/Base/scripts")
    @Scripts.Render("~/bundles/jqueryval")
}